{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateUrl": {
           "type": "string",
           "metadata": {
                "description": "Linked templates URL"
            }
        },
        "vnetTemplateName": {
           "type": "string",
           "metadata": {
                "description": "Vnet JSON linked template"
            }
        },
        "nsgTemplateName": {
           "type": "string",
           "metadata": {
                "description": "NSG Json linked template"
            }
        },
        "vmTemplateName": {
           "type": "string",
           "metadata": {
                "description": "VirtualMachine Json linked template"
            }
        }
    },
    "variables": {
        "clientName": "acme",
        "vnetName": "vnet01",
        "nsgName": "nsg",
        "vmName": "ubuntu",
        "nicName": "vm"
    },
    "resources": [
        {
            "name": "[variables('nsgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('templateUrl'), parameters('nsgTemplateName'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "nsgNameOrig": {
                        "value": "[concat('nsg', '-', variables('clientName'), '-', resourceGroup().location, '_', 'allow_ssh')]"
                    }
                }
            }
        },
        {
            "name": "[variables('vnetName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "[variables('nsgName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('templateUrl'), parameters('vnetTemplateName'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnetNameOrig": {
                        "value": "[concat('vnet', '-', variables('clientName'), '-', resourceGroup().location, '-', variables('vnetName'))]"
                    },
                    "nsgroupName": {
                        "value": "[reference(variables('nsgName')).outputs.nsgOutName.value]"
                    }
                }
            }
        },
        {
            "name": "[concat(variables('vmName'), '01')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "[variables('vnetName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('templateUrl'), parameters('vmTemplateName'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "suffix": {
                        "value": "01"
                    },
                    "vmNameOrig": {
                        "value": "[concat('vm', '-', variables('clientName'), '-', resourceGroup().location, '-', variables('vmName'))]"
                    },
                    "subnetRef": {
                        "value": "[reference(variables('vnetName')).outputs.subnetRef1.value]"
                    }

                }
            }
        },
        {
            "name": "[concat(variables('vmName'), '02')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "[variables('vnetName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('templateUrl'), parameters('vmTemplateName'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "suffix": {
                        "value": "02"
                    },
                    "vmNameOrig": {
                        "value": "[concat('vm', '-', variables('clientName'), '-', resourceGroup().location, '-', variables('vmName'))]"
                    },
                    "subnetRef": {
                        "value": "[reference(variables('vnetName')).outputs.subnetRef2.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        
    }
}